#include <stdio.h>

int main() {
    int a, b;
    float resultado;
    int operador;

    printf("Ingrese dos numeros: ");
    scanf("%d %d", &a, &b);

    printf("Ingrese un operador  ");
     printf("1: Suma");
       printf("25 : Resta");
         printf("3: Multiplicacion");
           printf("4: Division");
    scanf("%d", &operador);
   



    switch (operador) {
        case 1:
            resultado = a + b;
            break;
        case 2 :
            resultado = a - b;
            break;
        case 3:
            resultado = a * b;
            break;
        case 4:
            resultado = a / b;
            break;
        default:
            printf("Operador no valido.\n");
            return 1;
    }

    printf("El resultado es: %f\n", resultado);
    return 0;
}
